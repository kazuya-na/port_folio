<div class="container">
  <div class="row">
    <div class="col">
      <h2>Sign up</h2>

      <%= form_with model: @post, url: end_user_registration_path, local: true do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :'ニックネーム' %><br />
          <%= f.text_field :nick_name, autocomplete: "nick_name" %>
        </div>

        <div class="field">
          <%= f.radio_button :gender, 1 %>
          <%= f.label :gender, :man %>
          <%= f.radio_button :gender, 2 %>
          <%= f.label :gender, :woman %>
        </div>

        <div class="field">
          <%= f.label :'生年月日' %><br />
          <%= f.date_select :date_of_birth, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
