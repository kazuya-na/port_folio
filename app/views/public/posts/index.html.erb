<div class="container p-5">
  <div class="row">
    <div class="col-8 mx-auto">
      <h1>投稿一覧</h1>
      <%= link_to '新規投稿', new_post_path, class:'btn btn-primary' %>
    </div>
  </div>
  <table class='table'>
    <thead>
      <tr>
        <th>ユーザー</th>
        <th>タイトル</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>