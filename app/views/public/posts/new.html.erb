<div class="container p-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <!--ここから新規投稿フォーム-->
      <h1>新規投稿画面</h1>
      <%= form_with model: @post, local: true do |f| %>
        <p>
          <%= f.label :title %><br>
          <%= f.text_field :title, size: '60' %>
        </p>
        <p>
          <%= f.label :body %><br>
          <%= f.text_area :body, size: '60x5' %>
        </p>
        <p>
          <%= f.submit '投稿する', class: 'btn btn-sm btn-primary' %>
        </p>
      <% end %>
      <!--ここまで新規投稿フォーム-->
    </div>
  </div>
</div>