<div class="container p-5">
  <div class="row">
    <div class="col-12">
      <%= link_to posts_path, class: 'btn btn-secondary' do %>
        <i class="fa-solid fa-arrow-left"></i> 前のページに戻る
      <% end %>
    </div>
    <div class="col-md-6 mx-auto">
      <!--ここから新規投稿フォーム-->
      <h1>新規投稿画面</h1>
      <%= form_with model: @post, local: true do |f| %>
        <p>
          <%= f.label :'タイトル' %><br>
          <%= f.text_field :title, style: "width:100%", placeholder: " 2〜15字で入力してください" %>
        </p>
        <p>
          <%= f.label :'内容' %><br>
          <%= f.text_area :body, style: "width:100%", placeholder: " 200字以内で入力してください" %>
        </p>
        <p>
          <%= f.submit '投稿する', class: 'btn btn-sm btn-primary' %>
        </p>
      <% end %>
      <!--ここまで新規投稿フォーム-->
    </div>
  </div>
</div>