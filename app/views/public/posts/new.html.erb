<div class="container p-5">
  <div class="row">
    <div class="col-8 mx-auto">
      <h1>新規投稿画面</h1>
      <%= form_with model: @post,url: posts_path do |f| %>
        <p>
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </p>
        <p>
          <%= f.label :body %><br>
          <%= f.text_area :body %>
        </p>
        <p>
          <%= f.submit %>
        </p>
      <% end %>
    </div>
  </div>
</div>