<div class="container">
  <div class="row">
    <div class="col">
      <h2>Results index</h2>
      <table class="table">
        <% if @range == "EndUser" %>
          <tbody>
            <% @end_users.each do |end_user| %>
              <tr>
                <td>
                  <%= link_to(end_user) do %>
                    <%= image_tag end_user.get_profile_image, size:'40x40' %>
                    <%= end_user.nick_name %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        <% else %>
          <thead>
            <th>ユーザー</th>
            <th>タイトル</th>
            <th>内容</th>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td>
                  <%= link_to(post.end_user) do %>
                    <%= image_tag post.end_user.get_profile_image, size:'40x40' %>
                    <%= post.end_user.nick_name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to(post) do %>
                    <%= post.title %>
                  <% end %>
                </td>
                <td><%= post.body %></td>
              </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>