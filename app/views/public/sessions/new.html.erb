<div class="container p-5">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <h1 class="text-center pb-4">
        <strong>ログイン</strong>
      </h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages" %>

        <table class="table h5">
          <tr>
            <td>メールアドレス</td>
            <td>
              <div class="field">
                <%= f.email_field :email, autofocus: true, :placeholder => "mydiary@example.com", autocomplete: "email", class: 'form-control' %>
              </div>
            </td>
          </tr>
          <tr>
            <td>パスワード</td>
            <td>
              <div class="field">
                <%= f.password_field :password, autocomplete: "current-password", :placeholder => "6文字以上で入力してください", class: 'form-control' %>
              </div>
            </td>
          </tr>
        </table>

        <div class="actions text-center">
          <%= f.submit "ログインする", class: 'btn btn-lg btn-success m-2' %>
        </div>
      <% end %>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>