<div class="container">
  <div class="row">
    <div class="col">
      <h1>チャットルーム新規作成画面</h1>
      <%= form_with model: @chat_room, url: chat_rooms_path do |f| %>
        <div class="form-group">
          <%= f.label :'タイトル' %><br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :'内容' %><br>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <%= f.submit '作成する', class: 'btn btn-sm btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>