<div class="container p-5">
  <div class="row">
    <div class="col-12 text-center">
      <h1>チャットルーム一覧</h1>
    </div>
    <div class="col-12 text-right">
      <%= link_to 'チャットルーム作成', new_chat_room_path, class: 'btn btn-primary mb-2' %>
    </div>
    <div class="col-12 mx-auto">
      <table class='table border border-dark'>
        <thead class="bg-dark text-light">
          <tr>
            <th>タイトル</th>
            <th>内容</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @chat_rooms.each do |chat_room| %>
            <tr>
              <td class="border-dark">
                <%= link_to(chat_room) do %>
                  <%= chat_room.title %>
                <% end %>
              </td>
              <td class="border-dark"><%= chat_room.introduction %></td>
              <td class="border-dark"><%= link_to "削除", chat_room_path(chat_room.id), method: :delete, class: "btn btn-warning btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>