<div class="container p-5">
  <div class="row">
    <div class="col">
      <%= link_to end_user_path(@end_user), class: 'btn btn-secondary' do %>
        <i class="fa-solid fa-arrow-left"></i> 前のページに戻る
      <% end %>
    </div>
    <div class="col-12 text-center pb-4">
      <h1><strong>フォロー一覧</strong></h1>
    </div>
    <div class="col">
      <% if @end_users.exists? %>
        <table class='table border border-dark'>
          <thead class="bg-dark text-light">
            <tr>
              <th>ユーザー</th>
              <th>自己紹介文</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @end_users.each do |end_user| %>
              <% if end_user.nick_name != "guestuser" %>
                <tr class="h5">
                  <td class="border-dark">
                    <%= link_to(end_user) do %>
                      <%= image_tag end_user.get_profile_image, size:'80x80' %><br>
                      <%= end_user.nick_name %>
                    <% end %>
                  </td>
                  <td class="border-dark"><%= end_user.introduction %></td>
                  <td class="border-dark text-center">
                    <% if end_user.is_deleted %>
                      <p class="text-danger">退会済み</p>
                    <% end %>
                  </td>
                  <td class="border-dark" width="150px">
                    <% unless end_user.id == current_end_user.id %>
                      <% if current_end_user.following?(end_user) %>
                        <%= link_to "フォロー解除", end_user_relationships_path(end_user.id), method: :delete, class: "btn btn-info" %>
                      <% else %>
                        <%= link_to "フォローする", end_user_relationships_path(end_user.id), method: :post, class: "btn btn-success" %>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>