<div class="container p-5">
  <div class="row">
    <div class="col-12 text-center pb-4">
      <h1><strong>フォロー一覧</strong></h1>
    </div>
    <div class="col">
      <% if @end_users.exists? %>
        <table class='table border border-dark'>
          <thead class="bg-dark text-light">
            <tr>
              <th>ユーザー</th>
              <th>自己紹介文</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @end_users.each do |end_user| %>
              <tr>
                <td class="border-dark" width="200">
                  <%= link_to(end_user) do %>
                    <%= image_tag end_user.get_profile_image, size:'70x70' %>
                    <%= end_user.nick_name %>
                  <% end %>
                </td>
                <td class="border-dark" width="500"><%= end_user.introduction %></td>
                <td class="border-dark text-center" width="150">
                  <% if end_user.is_deleted %>
                    <p class="text-danger">退会済み</p>
                  <% end %>
                </td>
                <td class="border-dark" width="150">
                  <% unless end_user.id == current_end_user.id %>
                    <% if current_end_user.following?(end_user) %>
                      <%= link_to "フォロー外す", end_user_relationships_path(end_user.id), method: :delete, class: "btn btn-info" %>
                    <% else %>
                      <%= link_to "フォローする", end_user_relationships_path(end_user.id), method: :post, class: "btn btn-success" %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>