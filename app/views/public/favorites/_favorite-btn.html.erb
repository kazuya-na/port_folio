<% if post.favorited_by?(current_end_user) %>
  <%= link_to post_favorites_path(post), method: :delete, remote: true do %>
   <i class="fa-solid fa-heart" style="color: #ff1f4b;"></i> <%= post.favorites.count %>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), method: :post, remote: true do %>
   <i class="fa-regular fa-heart" style="color: #ff1f4b;"></i> <%= post.favorites.count %>
  <% end %>
<% end %>