<table class="table border border-dark">
  <thead class="bg-dark text-light">
    <th>アイコン</th>
    <th>ニックネーム</th>
    <th>性別</th>
    <th>生年月日(年齢)</th>
    <th>自己紹介</th>
    <th colspan="6"></th>
  </thead>
  <% if end_user.nick_name != "guestuser" %>
    <tbody>
      <tr>
        <td class="border-dark" width="100">
          <%= image_tag end_user.get_profile_image, size:'70x70' %>
        </td>
        <td class="border-dark" width="200">
          <strong><%= end_user.nick_name %></strong><br>
          <%= link_to end_user_followings_path(end_user) do %>
            フォロー数：<%= end_user.followings.count %>
          <% end %><br>
          <%= link_to end_user_followers_path(end_user) do %>
            フォロワー数：<%= end_user.followers.count %>
          <% end %>
        </td>
        <td class="border-dark" width="80"><%= end_user.gender_i18n %></td>
        <td class="border-dark" width="200">
          <div class='row'>
            <%= "#{end_user.date_of_birth.strftime('%Y年%m月%d日')} (#{(Date.current.strftime('%Y%m%d').to_i - end_user.date_of_birth.strftime('%Y%m%d').to_i) / 10000})" %>
          </div>
        </td>
        <td class="border-dark" width="500"><%= end_user.introduction %></td>
        <td class="border-dark" width="200">
          <% unless @end_user.id == current_end_user.id %>
            <% if current_end_user.following?(@end_user) %>
              <%= link_to "フォロー外す", end_user_relationships_path(@end_user.id), method: :delete, class: "btn btn-info" %>
            <% else %>
              <%= link_to "フォローする", end_user_relationships_path(@end_user.id), method: :post, class: "btn btn-success" %>
            <% end %>
          <% end %>
        </td>
    <% else %>
      <tr>
        <td>xxxx@example.com</td>
        <td>
          <%= image_tag end_user.get_profile_image, size:'40x40' %>
          <%= end_user.nick_name %>
        </td>
        <td>未登録</td>
        <td>xx年xx月xx日(xx)</td>
      </tr>
      <tr>
        <td>
          <strong>自己紹介：</strong>
        </td>
        <td>新規登録するとここに自己紹介文が書き込めます。</td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="border-dark d-grid gap-2 d-md-flex justify-content-md-end">
  <% if @end_user == current_end_user %>
    <%= link_to '退会はこちら', withdraw_confirm_path, class: 'btn btn-sm btn-danger m-1' %>
  <% end %>
</div>