<div class="container p-5">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center"><strong><%= @end_user.nick_name %>さんのプロフィール</strong></h1>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <% if @end_user == current_end_user %>
          <%= link_to '編集', edit_end_user_path(@end_user), class: 'btn btn-success m-1' %>
          <%= link_to '日誌', diaries_path, class: 'btn btn-info m-1' %>
          <%= link_to favorites_end_user_path(@end_user), class: 'btn btn-outline-dark m-1' do %>
            <i class="fa-solid fa-heart" style="color: #ff1f4b;"></i> いいね
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col">
      <%= render 'info', end_user: @end_user %>
    </div>
  </div>
</div>