<div class="container p-5">
  <div class="row">
    <div class="col-12 text-center pb-4">
      <%= render 'public/searches/search', range: @range %>
      <h1 class="pt-4"><strong>会員一覧</strong></h1>
    </div>
  </div>
  <div class="row row-cols-3">
    <% @end_users.each do |end_user| %>
      <% if end_user.nick_name != "guestuser" %>
        <div class="col text-center p-2" style="border-radius: 10px;">
          <h4>
            <%= link_to(end_user) do %>
              <%= image_tag end_user.get_profile_image, size: '200x200' %><br>
              <%= end_user.nick_name %><br>
            <% end %>
          </h4>
          <h5>
            <% if end_user.introduction.present? %>
              <%= end_user.introduction.truncate(20, omission: '...') %>
            <% else %>
              nilだよ
            <% end %>
          </h5>
        </div>
      <% end %>
    <% end %>
    <div class="col-12 text-center pt-4">
      <%= paginate @end_users %>
    </div>
  </div>
</div>