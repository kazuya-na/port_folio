<div class="container p-5">
  <div class="row">
    <div class="col-12 text-center">
      <h1>プロフィール編集画面</h1>
    </div>
    <div class="col-12 text-center">
      <%= form_with model: @end_user, local:true do |f| %>
      <div class="form-group">
        <%= f.label :'メールアドレス' %><br>
        <%= f.email_field :email %>
      </div>
      <div class="form-group">
        <%= f.label :'ニックネーム' %><br>
        <%= f.text_field :nick_name %>
      </div>
      <div class="form-group">
        <%= f.label :'性別' %><br>
        <%= f.radio_button :gender, 1 %>
        <%= f.label :gender, :man %>
        <%= f.radio_button :gender, 2 %>
        <%= f.label :gender, :woman %>
      </div>
      <div class="form-group">
          <%= f.label :'生年月日' %><br>
          <%= f.date_select :date_of_birth, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1) %>
        </div>
      <div class="form-group">
        <%= f.submit '更新する', class: 'btn btn-info' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
