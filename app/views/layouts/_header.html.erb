<header class="border-bottom border-dark" style="background-color: #faf0e6;">
  <div class="container">
    <nav class="navbar navbar-expand-md navbar-dark">
      <a class="navbar-brand text-dark m-2" href="/">
        <%= image_tag 'mydiary.jpeg', size: "150x85"%>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon bg-dark" style="border-radius: 5px;"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if end_user_signed_in? %>
          <li class="nav-item">
            <%= link_to chat_rooms_path, class:'nav-link text-light btn btn-dark m-1' do %>
              <i class="fa-regular fa-comments"></i> チャット
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to posts_path, class:'nav-link text-light btn btn-dark m-1' do %>
              <i class="fa-solid fa-pen-to-square"></i> 投稿一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to end_users_path, class:'nav-link text-light btn btn-dark m-1' do %>
              <i class="fa-solid fa-users"></i> 会員一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to end_user_path(current_end_user), class:'nav-link text-light btn btn-dark m-1' do %>
              <i class="fa-solid fa-user"></i> マイページ
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_end_user_session_path, method: :delete, class:'nav-link text-light btn btn-dark m-1' do %>
              <i class="fa-solid fa-right-from-bracket"></i> ログアウト
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%=  link_to root_path, class:'nav-link text-light btn btn-dark m-1' do %>
              <i class="fa-solid fa-house"></i> Home
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to homes_about_path, class:'nav-link text-light btn btn-dark m-1' do %>
              <i class="fas fa-link"></i> About
            <% end %>
          </li>
          <li class="nav-item">
            <%=  link_to new_end_user_registration_path, class:'nav-link text-light btn btn-dark m-1' do %>
              <i class="fas fa-user-plus"></i> 新規登録
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_end_user_session_path, class:'nav-link text-light btn btn-dark m-1' do %>
              <i class="fa-solid fa-right-to-bracket"></i> ログイン
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to end_users_guest_sign_in_path, class: "nav-link text-light btn btn-dark m-1", method: :post do %>
              <i class="fa-solid fa-right-to-bracket"></i> ゲストログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>