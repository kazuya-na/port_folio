<div class="container p-5">
  <div class="row">
    <div class="col-12 text-center pb-4">
      <%= render 'public/searches/search', range: @range %>
      <h1 class="pt-4"><strong>会員一覧</strong></h1>
    </div>

    <% @end_users.each do |end_user| %>
      <% if end_user.nick_name != "guestuser" %>
        <div class="col-lg-4 text-center p-2">
          <h4>
            <%= link_to admin_end_user_path(end_user) do %>
              <%= image_tag end_user.get_profile_image, size: '200x200', class: 'rounded-circle' %><br>
              <%= end_user.nick_name %><br>
            <% end %>
          </h4>
          <h5>
            <% if end_user.introduction.present? %>
              <%= end_user.introduction.truncate(20, omission: '...') %>
            <% else %>
              自己紹介がありません
            <% end %>
          </h5>
          <% if end_user.is_deleted %>
            <p class="text-danger">退会</p>
          <% else %>
            <p class="text-success">有効</p>
          <% end %>
        </div>
      <% end %>
    <% end %>
    <div class="col-12 text-center pt-4">
      <%= paginate @end_users %>
    </div>
  </div>
</div>