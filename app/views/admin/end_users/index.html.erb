<div class="container p-5">
  <div class="row">
    <div class="col-12 text-center">
      <h1><strong>会員一覧</strong></h1>
    </div>
    <div class="col">
      <table class="table border border-dark">
        <thead class="bg-dark text-light">
          <th>会員氏名</th>
          <th>自己紹介文</th>
          <th>会員ステータス</th>
        </thead>
        <tbody>
          <% @end_users.each do |end_user| %>
            <% if end_user.nick_name != "guestuser" %>
              <tr>
                <td class="border-dark" width="150">
                  <%= link_to admin_end_user_path(end_user) do %>
                    <%= image_tag end_user.get_profile_image, size:'50x50' %>
                    <%= end_user.nick_name %>
                  <% end %>
                </td>
                <td class="border-dark" width="600">
                  <%= end_user.introduction %>
                </td>
                <td class="border-dark text-center" width="150">
                  <% if end_user.is_deleted %>
                    <p class="text-danger">退会</p>
                  <% else %>
                    <p class="text-success">有効</p>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>